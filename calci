
#include <iostream>
int main()
{
    using namespace std;
    char c;
    char t = 'y';
    double n1;
    double n2;
    cout << "**************************" << '\n';
    cout << "*************CALCULATOR*************" << '\n';

    while (t != 'x')
    {
        cout << "Enter two numbers-" << '\n';
        cout << "enter num1-" << '\n';
        cin >> n1;

        cout << "enter num1-" << '\n';
        cin >> n2;

        cout << "Enter sign (+ - * /)-" << '\n';
        cin >> c;

        switch (c)
        {
        case '+':

            cout << n1 + n2 << '\n';
            break;

        case '-':

            cout << n1 - n2 << '\n';
            break;

        case '*':

            cout << n1 * n2 << '\n';

            break;

        case '/':

            cout << n1 / n2 << '\n';

            break;

            default:
            cout<<"please enter a valid sign!!!\n";
        }
        cout << "press 'y' to continue or 'x' to discontinue-";
        cin >> t;
    }
    return 0;
}
